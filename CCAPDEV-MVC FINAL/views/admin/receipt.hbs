<html>
<header>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receipt</title>
    <!--CSS-->
    <link rel="stylesheet" href="../styles/admin.css">
    <!--Font Styles-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@800&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Red Hat Text' rel='stylesheet'>
    <!--RemixIcon-->
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <!--Script-->
    <script src="/script/tab"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript">
    </script>
    <script>
        $(document).ready(function(){
            const urlParams = new URLSearchParams(window.location.search);
            const userIDs = urlParams.get('userIDs') ? urlParams.get('userIDs').split(',') : [];
            const classID = urlParams.get('classID');
            const seatIDs = urlParams.get('seatID') ? urlParams.get('seatID').split(',') : [];

        });       
    </script>
</header>
<body>
    <div class="page">
        <img class="page-background" src="../images/lab.jpg" alt="Lab Background">
        <div class="page-overlay">
            <div class="page-container">
                <div class="header">
                    <p><h1>Hello LAB Again!</h1></p>
                </div>
                <div class="content">
                    <div class="content-box">
                        <div class="main-box">
                            <div class="receipt-box">
                                <div class="receipts">
                                    <div class="receipt-details">
                                        <p>Receipt Id: {{#each receipts}} <span>{{this.receiptID}} </span> {{/each}} </p>
                                        <p>Student ID: {{#each users}} <span> {{this.userID}}</span>{{/each}}  </p>
                                        <p>Class Name:  <span> {{selectedClass.className}}</span></p>
                                        <p>Class Section: <span>{{selectedClass.section}} </span></p>
                                        <p>Building: <span>{{selectedClass.bldg}} </span></p>
                                        <p>Seat Number: 
                                            {{#each seats}}
                                            <span>{{this.seatID}} </span>
                                            {{/each}}
                                        </p>
                                        <p>Date: <span>{{toLocale createdAt}} </span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="logout">
                                <button onclick="window.location.href='/admin/dashboard'">Back</button>
                            </div>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>