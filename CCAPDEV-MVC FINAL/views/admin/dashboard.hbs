<html>
    <header>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home: Hello, Lab, Again!</title>
    <!--CSS-->
    <link rel="stylesheet" href="../styles/admin.css">
    <!--Font Styles-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@800&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Red Hat Text' rel='stylesheet'>
    <!--RemixIcon-->
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <!--Script-->
    <script src="/script/assignLocation"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
</header>
<body>
    <div class="page">
        <img class="page-background" src="../images/lab.jpg" alt="Lab Background">
        <div class="page-overlay">
            <div class="page-container">
                <div class="header">
                    <p><h1>Hello LAB Again!</h1></p>
                </div>
                <div class="content">
                    <div class="content-box">
                        <div class="main-box">
                            <div class="header-title">Laboratory Reservation System</div>
                            <div class="stats">
                                <div class="box users">
                                    <div class="icon"><i class="ri-user-line"></i></div>
                                    <div class="box-content">
                                        <h2>{{userCount}}</h3>
                                        <h3>Users</h2>
                                    </div>
                                </div>
                                <div class="box users">
                                    <div class="icon"><i class="ri-user-line"></i></div>
                                    <div class="box-content">
                                        <h2>{{classCount}}</h3>
                                        <h3>Classes</h2>
                                    </div>
                                </div>
                                <div class="box users">
                                    <div class="icon"><i class="ri-user-line"></i></div>
                                    <div class="box-content">
                                        <h2>{{resCount}}</h3>
                                        <h3>Reservations</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="title-functions">Admin Functions</div>
                            <div class="functions">
                                <button onclick="window.location.href='/admin/editReservations'">Edit Reservations</button>
                                <button onclick="window.location.href='/admin/walk-in'">Walk-in Reservations</button>
                            </div>
                            <div class="logout">
                                <button onclick="window.location.href='/main/login'">Logout</button>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>