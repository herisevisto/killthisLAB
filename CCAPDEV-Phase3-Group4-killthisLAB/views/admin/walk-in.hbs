<html>
    <header>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Walk In</title>
    <!--CSS-->
    <link rel="stylesheet" href="../styles/admin.css">
    <!--Font Styles-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@800&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Red Hat Text' rel='stylesheet'>
    <!--RemixIcon-->
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <!--Script-->
    <script src="/script/assignLocation"></script>
    <script src="/script/allocateClass"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
</header>
<body>
    <div class="page">
        <img class="page-background" src="../images/lab.jpg" alt="Lab Background">
        <div class="page-overlay">
            <div class="page-container">
                <div class="header">
                    <p><h1>Hello LAB Again!</h1></p>
                </div>
                <div class="content">
                    <div class="content-box">
                        <div class="main-box">
                            <div class="class-container">
                                <div class="class-details">
                                    <div class="field">
                                        <div class="sub-field">
                                            <p>Location</p>
                                            <select name="loc" id="loc" onchange="adminLocationChange()">
                                                <option value="Select Class">Select Location</option>
                                                <option value="All Class">All Location</option>
                                                <script>assignLocations()</script>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="field">
                                        <div class="sub-field loc">
                                            <p>Date and Time</p>
                                            <div name="date" id="date">
                                                <input type="date" id="datePicker" onchange="adminDateChange()">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="field">
                                        <div class="sub-field">
                                            <p>Seats Availability</p>
                                            <select name="seatNo" id="seatNo" onchange="seatChange()">
                                                <option value="0">Select Capacity</option>
                                                <option value="1">1 Student</option>
                                                <option value="2">Custom Group</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="classes">
                                    <div class="classrooms">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="logout">
                                <button onclick="window.location.href='/admin/dashboard'">Back</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>