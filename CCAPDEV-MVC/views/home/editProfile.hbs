<html>
<header>
    <title>FAQs</title>
    <!--CSS-->
    <link rel="stylesheet" href="../styles/main-style.css">
    <link rel="stylesheet" href="../styles/editProfile.css">
    <!--Font Styles-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@800&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Red Hat Text' rel='stylesheet'>
    <!--RemixIcon-->
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <!--Script-->
    <script src="/script/tab"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script>
         $(document).ready(function(){
            const urlParams = new URLSearchParams(window.location.search);
            const userID = parseInt(urlParams.get('userID'));

            if(userID){
                $('#myProfile').attr('href', `/home/myProfile?userID=${userID}`);
            }
        });          
    </script>
</header>
<body>
    <div class="page">
        <img class="page-background" src="../images/lab.jpg" alt="Lab Background">
        <div class="page-overlay">
            <div class="page-container">
                <div class="header">
                    <span class="header-menu"><i class="ri-menu-line"></i></span>
                    <span class="header-title">Laboratory Reservation System</span>
                    <span class="header-down"><i class="ri-arrow-down-s-fill"></i></span>
                    <span class="header-name">Hello, <a href="" id="myProfile">{{user.firstName}}</a>!</span>
                    <span class="header-profile"><img src="../images/user-icon.png" alt=""></span>
                </div>
                <div class="logout-dropdown">
                    <div class="logout-dropdown-content">
                        <a href="/main/login">Logout</a>
                    </div>
                </div>
                <div class="menu">
                    <div class="menu-content">
                        <h1><a href="/home/home-dashboard?userID={{user.userID}}">Dashboard</a></h1>
                        <div class="menu-option"><a href="/home/myProfile?userID={{user.userID}}">My Profile</a></div>
                        <div class="menu-option"><a href="/home/search?userID={{user.userID}}">Search</a></div>
                        <div class="menu-option"><a href="/home/reservation?userID={{user.userID}}">Reservations</a></div>
                        <div class="menu-option"><a href="/home/FAQs">FAQs</a></div>
                    </div>
                </div>
                <div class="content">
                    <div class="content-box">
                        <div class = "container1">
                            <div class = "container2">
                                <div class="container-header">
                                    <h1 style="padding-right: 60px;">My Profile</h1>

                                </div>
                                <div class="container-body">
                                    <div class="profile-box">
                                    <img class="profilepicture-icon" src="../images/Corpuz, Nicole Ashley L..png" alt="Profile Picture">
                                    <a href="/overlay/save-photo" class="change">Change Photo</a>
                                    <a href="/overlay/delete-photo" class="delete">Delete Photo</a>
                                    </div>
                                    <div class="profile-details">
                                        <div class="profile-field">
                                            <span class="input-label">Full Name:</span>
                                            <input type="text" name="fullname" id="fullname" style="margin-left: 60px;">

                                        </div>
                                        <div class="profile-field">
                                            <span class="input-label">Display Name:</span>
                                            <input type="text" name="displayname" id="displayname" style="margin-left: 30px;">
                                        </div>
                                        <div class="profile-field">
                                            <span class="input-label">Pronouns:</span>
                                            <input type="text" name="pronouns" id="pronouns" style="margin-left: 62px;">
                                        </div>
                                        <div class="profile-field">
                                            <span class="input-label">ID Number:</span>
                                            <input type="text" name="idnumber" id="idnumber" style="margin-left: 55px;">
                                        </div>
                                        <div class="profile-field">
                                            <span class="input-label">Email:</span>
                                            <input type="text" name="email" id="email" style="margin-left: 95px;">
                                        </div>
                                        <div class="description">
                                            <h1 style="margin-top: 10px;">Current Enrollments:</h1>
                                            <ul>
                                                <li style="font-weight: normal; color: grey; margin-left: 60px; margin-top: 5px;">Student in CCAPDEV</li>
                                                <li style="font-weight: normal; color: grey; margin-left: 60px;">Student in ITNET01</li>
                                                <li style="font-weight: normal; color: grey; margin-left: 60px; margin-bottom: 15px;">Student in LBYITN1</li>
                                            </ul>
                                            <a href="/overlay/pwchanged" class="change" style="color: black;">Change Password <span style="margin-left: 315px; color: grey;">&gt;</span></a>
                                            <a href="/overlay/delete-account" class="delete" style="color: black;">Delete Account <span style="margin-left: 335px; color: grey;">&gt;</span></a>
                                        </div>
                                        <div class="profile-buttons">
                                            <button class="save-profile" style="background-color: violet; color: white;">Save</button>
                                            <form action="/overlay/unsavedchanges">
                                                <button class="cancel-profile" style="background-color: white; color: red;">Cancel</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>    
                            </div>
                        </div>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</body></html>
